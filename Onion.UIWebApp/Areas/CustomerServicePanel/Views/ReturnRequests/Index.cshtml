@model List<Onion.Application.Model.DTO_s.ReturnRequest_DTO>

<div class="container">
    <h2 class="admin-title">📦 İade Talepleri</h2>

    @if (!Model.Any())
    {
        <p>Henüz bir iade talebi bulunmamaktadır.</p>
    }
    else
    {
        <div class="card">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>İade ID</th>
                        <th>Sipariş ID</th>
                        <th>Kullanıcı Adı</th>
                        <th>İade Nedeni</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>@request.ReturnID</td>
                            <td>@request.OrderID</td>
                            <td>@request.UserName</td>
                            <td>@request.Reason</td>
                            <td>
                                @if (request.ReturnStatus == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                }
                                else if (request.ReturnStatus == "Approved")
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else if (request.ReturnStatus == "Rejected")
                                {
                                    <span class="badge bg-danger">Reddedildi</span>
                                }
                            </td>
                            <td>
                                @if (request.ReturnStatus == "Pending")
                                {
                                    <form asp-action="ApproveReturn" method="post" style="display:inline;">
                                        <input type="hidden" name="returnId" value="@request.ReturnID" />
                                        <button type="submit" class="btn btn-gradient btn-sm">Onayla</button>
                                    </form>
                                    <form asp-action="RejectReturn" method="post" style="display:inline;">
                                        <input type="hidden" name="returnId" value="@request.ReturnID" />
                                        <button type="submit" class="btn btn-danger btn-sm">Reddet</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">İşlem tamamlandı.</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        color: #333;
        background-color: #e0f6fa;
    }

    .admin-title {
        background-color: #ffeb3b;
        color: #333;
        padding: 15px 25px;
        border-radius: 20px;
        border: 2px solid #333;
        text-align: center;
        font-weight: bold;
        font-size: 28px;
        margin: 30px auto;
        width: fit-content;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card {
        background: #ffffff;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        margin-top: 40px;
    }

    .table {
        margin-top: 20px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.05);
    }

        .table thead {
            background-color: #ffeb3b;
            color: #333;
        }

        .table tbody tr:hover {
            background-color: #f1f8fd;
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }

    .btn-gradient {
        background: linear-gradient(45deg, black, #fad0c4);
        border: none;
        color: white;
        padding: 8px 18px;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            transform: scale(1.1);
            filter: brightness(1.2);
        }

    .badge.bg-warning {
        background-color: #f39c12;
        color: white;
    }

    .badge.bg-success {
        background-color: #28a745;
        color: white;
    }

    .badge.bg-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            transform: scale(1.05);
        }

    .btn-sm {
        padding: 6px 12px;
    }
</style>
