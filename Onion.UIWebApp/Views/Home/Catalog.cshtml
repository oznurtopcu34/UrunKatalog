@model List<Onion.Application.Model.DTO_s.ProductUpdate_DTO>

<div id="modernCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var product in Model.Select((p, i) => new { Product = p, Index = i }))
        {
            <div class="carousel-item @(product.Index == 0 ? "active" : "")">
                <div class="d-flex justify-content-center align-items-center" style="height: 90vh; background-color: #fef5e7;">
                    <!-- Kart -->
                    <div class="card d-flex flex-row" style="width: 80%; height: 70%; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); border-radius: 15px; overflow: hidden;">
                        <!-- Görsel Alanı -->
                        <div style="width: 60%; overflow: hidden;">
                            <img src="~/Images/@product.Product.Image" alt="@product.Product.ProductName" class="product-image" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease;">
                        </div>
                        <!-- Bilgi Alanı -->
                        <div class="card-body d-flex flex-column justify-content-center" style="width: 50%; background-color: #fef5e7; padding: 30px;">
                            <h1 style="font-size: 2rem; font-weight: bold; color: #333;">@product.Product.ProductName</h1>
                            <h2></h2>
                            <p style="font-size: 1.5rem; color: #555;"><strong>Price:</strong> @product.Product.Price.ToString("C")</p>
                            <p></p>
                            <p style="font-size: 1.5rem; color: #555;"><strong>Category:</strong> @product.Product.CategoryName</p>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Carousel Kontrolleri -->
    <a class="carousel-control-prev" href="#modernCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#modernCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Stil -->
<style>
    /* Görsel Zoom-in Animasyonu */
    .product-image:hover {
        transform: scale(1.1);
    }

    /* Kart Ayarları */
    .card {
        display: flex;
        flex-direction: row;
        border-radius: 15px;
        overflow: hidden;
    }

    /* Bilgi Alanı */
    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
    }
</style>

<!-- Gerekli CSS ve JavaScript -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
