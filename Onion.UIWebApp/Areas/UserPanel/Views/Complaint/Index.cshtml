    }

        .table thead {
            background-color: #ffeb3b;
            color: #333;
            font-weight: 600;
        }

        .table tbody tr:hover {
            background-color: #f1f8fd;
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }

    .add-complaint-container {
