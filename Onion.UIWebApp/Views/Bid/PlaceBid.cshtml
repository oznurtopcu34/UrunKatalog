@using Onion.Application.Model.DTO_s

@model Onion.Application.Model.DTO_s.Bid_DTO

<div class="container">
    <h2 class="title">💰 Teklif Ver</h2>

    <div class="card">
        <div class="product-container">
            <div class="product-card">
                <span class="product-label">Teklif Verdiğiniz Ürün</span>
                <h3 class="product-name">@await Component.InvokeAsync("GetProduct", new { productId = Model.ProductID })</h3>
            </div>
        </div>

        <form asp-action="PlaceBid" method="post">
            <input type="hidden" asp-for="ProductID" />

            <div class="form-group">
                <label for="Name">Adınız Soyadınız:</label>
                <input asp-for="Name" class="form-control" required placeholder="Adınızı ve soyadınızı girin" />
            </div>

            <div class="form-group">
                <label for="Email">Email:</label>
                <input asp-for="Email" type="email" class="form-control" required placeholder="E-posta adresinizi girin" />
            </div>

            <div class="form-group">
                <label for="Phone">Telefon:</label>
                <input asp-for="Phone" class="form-control" required placeholder="Telefon numaranızı girin" />
            </div>

            <div class="form-group">
                <label for="OfferedPrice">Teklif Fiyatı:</label>
                <input asp-for="OfferedPrice" type="number" class="form-control" required placeholder="Teklif fiyatınızı girin" />
            </div>

            <button type="submit" class="btn btn-gradient">Teklif Gönder</button>
        </form>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        color: #333;
        background-color: #e0f6fa;
    }

    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
    }

    .title {
        text-align: center;
        background-color: #ffeb3b;
        color: #333;
        padding: 15px;
        border-radius: 10px;
        font-size: 24px;
        font-weight: bold;
    }

    .card {
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .product-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .product-card {
        background: green;
        padding: 15px 20px;
        border-radius: 15px;
        text-align: center;
        color: white;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        min-width: 80%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        position: relative;
    }

        .product-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

    .product-label {
        font-size: 14px;
        opacity: 0.9;
        display: block;
        margin-bottom: 5px;
        text-transform: uppercase;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .product-name {
        font-size: 24px;
        font-weight: bold;
        color: white;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
        transition: color 0.3s ease;
    }

    .product-card:hover .product-name {
        color: #ffeb3b;
        text-shadow: 2px 2px 15px rgba(255, 235, 59, 0.8);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #ffeb3b;
            box-shadow: 0 0 5px rgba(255, 235, 59, 0.6);
        }

    .btn-gradient {
        background: linear-gradient(45deg, black, #fad0c4);
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s ease;
        font-size: 16px;
        width: 100%;
    }

        .btn-gradient:hover {
            transform: scale(1.05);
            filter: brightness(1.2);
        }
</style>
