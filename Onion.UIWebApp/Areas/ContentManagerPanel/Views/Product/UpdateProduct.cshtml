@model Onion.UIWebApp.Models.ProductUpdate_VM

@{
    ViewData["Title"] = "Ürün Güncelle";
}

<div class="container mt-5">
    <h2 class="form-title">🛠 Ürün Güncelle</h2>

    <form asp-action="UpdateProduct" method="post" enctype="multipart/form-data" class="update-form shadow-lg">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="ProductID"></label>
            <input asp-for="ProductID" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="ProductName"></label>
            <input asp-for="ProductName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Stock"></label>
            <input asp-for="Stock" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="CategoryID">Kategori</label>
            <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories" readonly></select>
        </div>

        <div class="form-group">
            <label asp-for="Image">Ürün Resmi</label>
            <input asp-for="Image" type="file" class="form-control file-input" />
        </div>

        <button type="submit" class="btn btn-gradient">✅ Güncelle</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #eaf6fd;
        font-family: 'Arial', sans-serif;
    }

    .form-title {
        font-size: 28px;
        background-color: yellow;
        color: black;
        padding: 15px 25px;
        border-radius: 10px;
        border: 2px solid black;
        text-align: center;
        font-weight: bold;
        font-size: 24px;
        margin: 20px auto;
        display: block;
        width: fit-content;
    }

    .update-form {
        background: white;
        padding: 25px;
        border-radius: 10px;
        max-width: 600px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        border-radius: 6px;
        padding: 10px;
        border: 1px solid #ddd;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0px 0px 8px rgba(0, 123, 255, 0.5);
        }

    .file-input {
        padding: 8px;
        border: 1px dashed #aaa;
        background-color: #fafafa;
        cursor: pointer;
    }

    .btn-gradient {
        background: linear-gradient(45deg, #28a745, #218838);
        color: white;
        font-weight: bold;
        border: none;
        padding: 10px 15px;
        width: 100%;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            background: linear-gradient(45deg, #218838, #1e7e34);
            transform: scale(1.05);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

    .shadow-lg {
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }
</style>
