@model List<Onion.Application.Model.DTO_s.Order_DTO>

<div class="container">
    <h2 class="admin-title">📦 Siparişlerim</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    @if (!Model.Any())
    {
        <p class="no-orders">Henüz bir siparişiniz yok.</p>
    }
    else
    {
        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>Sipariş ID</th>
                        <th>Sipariş Tarihi</th>
                        <th>Toplam Fiyat</th>
                        <th>İade Talebi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderID</td>
                            <td>@order.OrderDate.ToShortDateString()</td>
                            <td class="price">@string.Format("{0:C}", order.TotalPrice)</td>
                            <td>
                                @if (order.CanRequestReturn)
                                {
                                    <form asp-action="RequestReturn" asp-controller="Panel" method="post">
                                        <input type="hidden" name="orderId" value="@order.OrderID" />
                                        <div class="mb-2">
                                            <input type="text" name="reason" placeholder="İade Nedeni" class="form-control" required />
                                        </div>
                                        <button type="submit" class="btn btn-warning">İade Talebi Gönder</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">İade talebi gönderilemez.</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    body {
        font-family: 'Helvetica Neue', sans-serif;
        margin: 0;
        color: #333;
        background-color: #f4f9fd;
    }

    .admin-title {
        background-color: #ffeb3b;
        color: #333;
        padding: 20px 30px;
        border-radius: 30px;
        border: 3px solid #333;
        text-align: center;
        font-weight: bold;
        font-size: 32px;
        margin: 40px auto;
        width: fit-content;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
    }

    .no-orders {
        font-size: 18px;
        color: #888;
        text-align: center;
        margin-top: 20px;
        font-style: italic;
    }

    .card {
        background: #ffffff;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        margin-top: 40px;
    }

    .table {
        margin-top: 20px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.05);
    }

        .table thead {
            background-color: #ffeb3b;
            color: #333;
            font-weight: 600;
        }

        .table tbody tr:hover {
            background-color: #f1f8fd;
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }

    .price {
        font-size: 1.1em;
        font-weight: 600;
        color: #388e3c;
    }

    .btn-warning {
        background: linear-gradient(45deg, black, #fad0c4);
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s ease;
        font-size: 16px;
    }

        .btn-warning:hover {
            transform: scale(1.05);
            filter: brightness(1.2);
        }

    .text-muted {
        color: #6c757d;
    }
</style>
